<div class="row">
    <div class="col-3">
        <div class="card my-4">
            <div class="card-header navbarTopColor">
                <ul class="list-group categoryUL">
                    <a href=""><li class="list-group-item active a"><p>All</p></li></a>
                    <a href=""><li class="list-group-item"><p>Moment</p></li></a>
                    <a href=""><li class="list-group-item"><p>Life</p></li></a>
                    <a href=""><li class="list-group-item"><p>Science</p></li></a>
                    <a href=""><li class="list-group-item"><p>Technology</p></li></a>
                    <a href=""><li class="list-group-item"><p>Electronic</p></li></a>
                    <a href=""><li class="list-group-item"><p>Biological</p></li></a>
                    <a href=""><li class="list-group-item"><p>Literary</p></li></a></li></a>
                    <a href=""><li class="list-group-item"><p>Mathematics</p></li></a>
                </ul>
            </div>
        </div>
    </div>
    <div class="col-8">
        <ul class="contentUL">
            <div class="card mb-2">
                <form action="">
                    <div class="row">
                        <div class="col-md-auto">
                            <a href="#"> <img src="./images/Avatar/user_1.png" class="rounded-circle"
                                    style="width: 90px; height: 90px;" alt="user_img"> </a>
                        </div>
                        <div class="col-md">
                            <input type="text" class="post" id="post_btn" placeholder="">
                            {{!-- <button id="post_btn">POST</button> --}}
                        </div>
                    </div>
                </form>
            </div>

            {{!-- Create Post --}}
            <center><div class="create_post my-5">
                    <div class="info">
                        <div class="card">
                            <div class="card-header bgColor">
                                <div class="close" id="close_btn">+</div>
                                <h2 class="text-center">Create Post</h2>
                            </div>
                            <div class="card-body formColor">
                                <div class="row m-2">
                                    <a href="#"> <img src="./images/Avatar/user_1.png" class="rounded-circle"
                                            style="width: 70px; height: 70px;" alt="user_img"> </a>
                                    <span class="h3">User name 1</span>
                                </div>
                                <div class="row m-3 p-2">
                                    <textarea class="form-control p-4 text-dark" id="w3review" name="post area"
                                        placeholder="Write your post here" rows="4" cols="50"></textarea>
                                </div>
                                <div class="row m-3">
                                    <input type="file" id="file" accept="image/*" multiple>
                                    <label for="file">
                                        <i class="material-icons fa-3x mainColor add_photos">add_photo_alternate</i>
                                    </label>
                                </div>
                                <div class="img-preview" id="imgPreview">
                                    <div id="carouselId" class="carousel slide" data-ride="carousel">
                                        <ol class="carousel-indicators" id="indicators">

                                        </ol>
                                        <div class="carousel-inner" id="inner" role="listbox">

                                        </div>
                                        <a class="carousel-control-prev" href="#carouselId" role="button"
                                            data-slide="prev">
                                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                            <span class="sr-only">Previous</span>
                                        </a>
                                        <a class="carousel-control-next" href="#carouselId" role="button"
                                            data-slide="next">
                                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                            <span class="sr-only">Next</span>
                                        </a>
                                    </div>
                                </div>
                                <div class="row m-2 justify-content-center">
                                    <button type="button" class="btn bgColor btn-block btn-postBtn mt-3">Post</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div></center>


            {{#each posts}}
            <div class="card my-5">
                <div class="card-header postColor">
                    <div class="row">
                        <div class="col-md-auto">
                            <a href="#"> <img src="./images/Avatar/{{User.avt}}.png" class="rounded-circle"
                                    style="width: 70px; height: 70px;" alt="user_img"> </a>
                        </div>
                        <div class="col-sm-10">
                            <h3>{{User.fname}}{{User.lname}}</h3>
                            <h5>{{time}} {{pDay}} {{pYear}} {{pMonth}}</h5>
                        </div>
                    </div>
                </div>
                <div class="card-body postContentColor">
                    <h4 class="card-title">{{content}}</h4>
                </div>
                <div class="card-footer text-muted">
                    <div class="row">
                        <div class="col-md-9">
                            <i class="fa fa-thumbs-o-up" aria-hidden="true"></i>
                            <span>{{like}}</span>
                        </div>
                        <div class="col-md-3 text-center">
                            <span>{{share}}</span>
                            <i class="fa fa-comment-o" aria-hidden="true"></i>
                            <span>{{comment}}</span>
                            <i class="fa fa-share-square-o" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-muted">
                    <div class="row" style="cursor: pointer;">
                        <div class="col text-center border-right border-secondary p-0 m-0">
                            <span class="text-dark like" id="like">Like</span>
                        </div>
                        <div class="col text-center border-right border-secondary p-0 m-0">
                            <span class="text-dark share" id="cmt">Comment</span>
                        </div>
                        <div class="col text-center">
                            <span class="text-dark cmt" id="share">Share</span>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-muted">
                    <span class="h6 font-weight-bold"> See more comments... </span>
                </div>
            </div>
            {{/each}}

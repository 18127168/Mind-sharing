<link rel="stylesheet" href="./css/create_post.css">

<div class="container my-5">
    <div class="info">
        <div class="card">
            <div class="card-header bgColor">
                <h2 class="text-center">Create Post</h2>
            </div>
            <div class="card-body formColor">
                <div class="row m-2">
                    <a href="#"> <img src="./images/Avatar/user_1.jpg" class="rounded-circle" style="width: 70px; height: 70px;" alt="user_img"> </a>
                    <span class="h3">User name 1</span>
                </div>
                <div class="row m-3 p-2">
                    <textarea class="form-control p-4 text-dark" id="w3review" name="post area"
                        placeholder="Write your post here" rows="4" cols="50"></textarea>
                </div>
                <div class="row m-3">
                    <input type="file" id = "file" accept="image/*">
                    <label for="file">
                        <i class="material-icons fa-3x mainColor">add_photo_alternate</i>
                    </label>
                </div> 
                <div class="img-preview" id="imgPreview">
                    <center><img src="" alt="" class="image-preview"></center>
                </div>
                <div class="row m-2 justify-content-center">
                    <button type="button" class="btn bgColor btn-block btn-postBtn mt-3">Post</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="./js/create_post.js"></script>
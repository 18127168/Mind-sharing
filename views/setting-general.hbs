<link rel="stylesheet" href="/css/setting.css">

<form class="" action="/setting/get_infor_edit" method="POST">
<div class="row">
  <div class="col-3">
    <div class="card my-4">
      <div class="card-header">
        <ul class="list-group categoryUL">
          <li class="list-group-item active"><a href="/setting/general">General</a></li>
          <li class="list-group-item"><a href="/setting/privacy">Privacy</a></li>
          <li class="list-group-item"><a href="/setting/password">Password and Security</a></li>
        </ul>
      </div>
    </div>
  </div>
  <div class="col-8 my-4">
    <div class="card">
      <div class="card-header">
        <h1>General</h1>
      </div>
      <div class="card-body">
        <div class="row m-2">
          <div class="col-3">
            <h5>First Name</h5>
          </div>
          <div class="col">
            <div class="form-row">
              <input type="text" class="form-control" name="fname" value="{{user.fname}}" disabled>
            </div>
          </div>

        </div>
        <div class="row m-2">
          <div class="col-3">
            <h5>Last Name</h5>
          </div>
          <div class="col">
            <div class="form-row">
              <input type="text" class="form-control" name="lname" value="{{user.lname}}" disabled>
            </div>
          </div>

        </div>
        <div class="row m-2">
          <div class="col-3">
            <h5>Address</h5>
          </div>
          <div class="col">
            <div class="form-row">
              <input type="text" class="form-control" name="address" value="{{user.address}}" disabled>
            </div>
          </div>
        </div>
        <div class="row m-2">
          <div class="col-3">
            <h5>Email Address</h5>
          </div>
          <div class="col">
            <div class="form-row">
              <input type="text" class="form-control" name="email" value="{{user.email}}" disabled>
            </div>
          </div>
        </div>
        <div class="row m-2">
          <div class="col-3">
            <h5>Phone number</h5>
          </div>
          <div class="col">
            <div class="form-row">
              <input type="text" class="form-control" name="pNum" value="{{user.pNum}}" disabled>
            </div>
          </div>

        </div>
        <div class="row m-2">
          <div class="col-3">
            <h5>Birthday</h5>
          </div>
          <div class="col">
            <div class="form-row">
              <input type="text" class="form-control" name="bDay" value="{{user.bDay}}-{{user.bMonth}}-{{user.bYear}}" disabled>
            </div>
          </div>
        </div>
        <div class="row m-2">
          <div class="col-3">
            <h5>Nationality</h5>
          </div>
          <div class="col">
            <div class="form-row">
              <input type="text" class="form-control" name="nation" value="{{user.nation}}" disabled>
            </div>
          </div>

        </div>
        <div class="row m-2">
          <div class="col-3">
            <h5>Bio</h5>
          </div>
          <div class="col">
            <div class="form-row">
              <input type="text" class="form-control" name="bio" value="{{user.bio}}" disabled>
            </div>
          </div>
        </div>
        <div class="row m-2">
          <div class="col-3">
          </div>
          <div class="col ">
            <div class="form-row">

              <input type="button" class="btn btn-primary editBtn" id="editBtn" value="Edit">
              <button type="submit" class="btn btn-primary editBtn" id="cfmBtn">Confirm</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</form>

<script src="/js/setting.js"></script>